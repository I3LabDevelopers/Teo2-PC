        <ComboBox x:Name="right_shoulder_box" HorizontalAlignment="Left" Height="28" Margin="261,10,0,0" VerticalAlignment="Top" Width="125" Grid.Column="1"/>
        <ComboBox x:Name="up_box" HorizontalAlignment="Left" Height="28" Margin="99,136,0,0" VerticalAlignment="Top" Width="125"/>

        <ComboBox x:Name="down_box" HorizontalAlignment="Left" Height="28" Margin="99,202,0,0" VerticalAlignment="Top" Width="125"/>
