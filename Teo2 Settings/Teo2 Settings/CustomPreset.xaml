        <Image x:Name="image" HorizontalAlignment="Left" Height="326" Margin="10,10,0,0" VerticalAlignment="Top" Width="803" Source="pack://application:,,,/Teo2 Settings;component/images/custom_preset.png" Grid.ColumnSpan="2"/>
        <ComboBox x:Name="left_trigger_box" HorizontalAlignment="Left" Height="28" Margin="58,43,0,0" VerticalAlignment="Top" Width="125"/>
